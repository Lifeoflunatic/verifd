{
  "name": "@verifd/backend",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:mock": "tsx watch src/server-mock.ts",
    "dev:docker": "docker compose up --build",
    "build": "tsc -b",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:mock": "cross-env DB_DRIVER=mock vitest run --reporter=verbose",
    "lint": "eslint src",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "postinstall": "pnpm rebuild better-sqlite3 || echo 'rebuild skipped'",
    "dev:probe": "node scripts/dev-probe.mjs",
    "staging:deploy": "./deploy/staging.sh deploy",
    "staging:status": "./deploy/staging.sh status",
    "staging:stop": "./deploy/staging.sh stop",
    "staging:clean": "./deploy/staging.sh clean"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@slack/web-api": "^7.5.0",
    "@verifd/shared": "workspace:*",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "nanoid": "^5.0.7",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "lcov-result-merger": "^5.0.1",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}