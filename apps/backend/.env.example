# S3/R2 Storage Configuration
S3_COMPAT_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=your-bucket-name
S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
PUBLIC_CDN_BASE=https://your-cdn-url.r2.dev/your-bucket-name

# Server Configuration
PORT=3002
NODE_ENV=production

# Database
DATABASE_URL=sqlite:./data/verifd.db

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-secure-jwt-secret-change-in-production

# CORS (comma-separated list of allowed origins)
# The backend checks for CORS_ALLOWED_ORIGINS first, then falls back to CORS_ORIGINS
CORS_ALLOWED_ORIGINS=https://verify.getpryvacy.com,https://verifd-web-verify-*.vercel.app

# Sweeper Secret (for cron jobs - generate a secure random string)
SWEEPER_SECRET=your-secure-sweeper-secret-change-in-production

# Node Version (for deployment platforms)
NODE_VERSION=22