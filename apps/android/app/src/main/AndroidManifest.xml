<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Call screening permissions - minimal set for store compliance -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    
    <!-- STORE COMPLIANCE: We explicitly do NOT request dangerous SMS/call log permissions -->
    <!-- Identity Ping uses ACTION_SENDTO (sms:) intent - no SEND_SMS permission needed -->
    <!-- Call screening uses CallScreeningService - no READ/WRITE_CALL_LOG permissions needed -->
    <!-- This ensures Play Store compliance and respects user privacy -->
    
    <!-- Network and storage -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Quick Settings Tile -->
    <uses-permission android:name="android.permission.BIND_QUICK_SETTINGS_TILE" />
    
    <!-- Background tasks -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Custom permission to protect notification actions -->
    <permission
        android:name="com.verifd.android.permission.NOTIFICATION_ACTION"
        android:protectionLevel="signature"
        android:label="@string/permission_notification_action_label"
        android:description="@string/permission_notification_action_description" />
    
    <uses-permission android:name="com.verifd.android.permission.NOTIFICATION_ACTION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Verifd"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Verifd">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Debug Panel Activity (staging only) -->
        <activity
            android:name=".ui.DebugPanelActivity"
            android:exported="false"
            android:theme="@style/Theme.Verifd"
            android:label="Debug Panel" />

        <!-- Call Screening Service -->
        <service
            android:name=".service.CallScreeningService"
            android:permission="android.permission.BIND_SCREENING_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.CallScreeningService" />
            </intent-filter>
        </service>

        <!-- Post-Call Activity -->
        <activity
            android:name=".ui.PostCallActivity"
            android:exported="false"
            android:theme="@style/Theme.Verifd.Dialog"
            android:taskAffinity=""
            android:excludeFromRecents="true" />

        <!-- QA Panel V2 (Staging only) -->
        <activity
            android:name=".ui.QAPanelV2Activity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
            android:label="QA Panel V2"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="verifd"
                    android:host="qa" />
            </intent-filter>
        </activity>

        <!-- Notification Action Receiver -->
        <!-- Exported for reliability: system can wake up app to handle actions -->
        <receiver
            android:name=".notification.NotifActionReceiver"
            android:exported="true"
            android:enabled="true"
            android:permission="com.verifd.android.permission.NOTIFICATION_ACTION">
            <intent-filter>
                <action android:name="com.verifd.android.ACTION_SEND_SMS" />
                <action android:name="com.verifd.android.ACTION_SEND_WHATSAPP" />
                <action android:name="com.verifd.android.ACTION_COPY_LINK" />
            </intent-filter>
        </receiver>

        <!-- Quick Settings Tile -->
        <service
            android:name=".service.ExpectingCallTileService"
            android:exported="true"
            android:icon="@drawable/ic_phone_in_talk"
            android:label="@string/expecting_call_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Background cleanup service -->
        <service
            android:name=".service.CleanupService"
            android:exported="false" />

        <!-- Notification action receiver -->
        <receiver
            android:name=".receiver.NotificationActionReceiver"
            android:exported="false" />

    </application>

</manifest>